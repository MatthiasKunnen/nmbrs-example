{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "esnext",
        "lib": [
            "esnext"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
